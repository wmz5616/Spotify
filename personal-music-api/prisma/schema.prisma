// schema.prisma
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Artist {
  id     Int     @id @default(autoincrement())
  name   String  @unique
  albums Album[]
}

model Album {
  id        Int      @id @default(autoincrement())
  title     String
  artist    Artist   @relation(fields: [artistId], references: [id])
  artistId  Int
  cover     Bytes? // 存储专辑封面图片数据
  songs     Song[]

  @@unique([title, artistId])
}

model Song {
  id          Int    @id @default(autoincrement())
  title       String
  trackNumber Int?
  path        String @unique
  album       Album  @relation(fields: [albumId], references: [id])
  albumId     Int
}